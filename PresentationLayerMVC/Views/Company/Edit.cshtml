@model PresentationLayerMVC.Models.CompanyModels.CompanyUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Modifique os dados da Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommercialName" class="control-label"></label>
                <input asp-for="CommercialName" class="form-control" />
                <span asp-validation-for="CommercialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" id="State" class="form-control">
                    @{
                        string[] states = Enum.GetNames(typeof(Entities.Enums.UF));
                    }

                    @for (int i = 0; i < states.Length; i++)
                    {
                        <option value="@i">@states[i]</option>
                    }

                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPNJ" class="control-label"></label>
                <input asp-for="CPNJ" class="form-control" />
                <span asp-validation-for="CPNJ" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" checked asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista de Empresas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
